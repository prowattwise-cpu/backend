<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top Bar with Logo, Back Button, Weekly Text, and Profile -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <Button
            android:id="@+id/button5"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/baseline_arrow_back_24"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/wattwiselogo"
            app:srcCompat="@drawable/w_wise_logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/squadaone_regular"
            android:text="@string/weekly_usage"
            android:textColor="@color/black"
            android:textSize="45sp" />
    </RelativeLayout>

    <!-- Scrollable Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- First Week -->
            <RelativeLayout
                android:id="@+id/textViewFirstWeek"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_button_light_blue">

                <TextView
                    android:id="@+id/FirstWeek"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/squadaone_regular"
                    android:text="@string/first_week"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center" />

                <View
                    android:id="@+id/LineFirstWeek"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_toEndOf="@id/FirstWeek"
                    android:layout_toStartOf="@id/kwhFirstWeek"
                    android:layout_alignBaseline="@id/FirstWeek"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/kwhFirstWeek"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/squadaone_regular"
                    android:text="-----/kWh"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:gravity="center_vertical" />
            </RelativeLayout>

            <!-- Second Week -->
            <RelativeLayout
                android:id="@+id/textViewSecondWeek"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_button_light_blue">

                <TextView
                    android:id="@+id/SecondWeek"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/squadaone_regular"
                    android:text="@string/second_week"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center" />

                <View
                    android:id="@+id/LineSecondWeek"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_toEndOf="@id/SecondWeek"
                    android:layout_toStartOf="@id/kwhSecondWeek"
                    android:layout_alignBaseline="@id/SecondWeek"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/kwhSecondWeek"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/squadaone_regular"
                    android:text="-----/kWh"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:gravity="center_vertical" />
            </RelativeLayout>

            <!-- Third Week -->
            <RelativeLayout
                android:id="@+id/textViewThirdWeek"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_button_light_blue">

                <TextView
                    android:id="@+id/ThirdWeek"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/squadaone_regular"
                    android:text="@string/third_week"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center" />

                <View
                    android:id="@+id/LineThirdWeek"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_toEndOf="@id/ThirdWeek"
                    android:layout_toStartOf="@id/kwhThirdWeek"
                    android:layout_alignBaseline="@id/ThirdWeek"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/kwhThirdWeek"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/squadaone_regular"
                    android:text="-----/kWh"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:gravity="center_vertical" />
            </RelativeLayout>

            <!-- Fourth Week -->
            <RelativeLayout
                android:id="@+id/textViewFourthWeek"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_button_light_blue">

                <TextView
                    android:id="@+id/FourthWeek"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/squadaone_regular"
                    android:text="@string/fourth_week"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center" />

                <View
                    android:id="@+id/LineFourthWeek"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_toEndOf="@id/FourthWeek"
                    android:layout_toStartOf="@id/kwhFourthWeek"
                    android:layout_alignBaseline="@id/FourthWeek"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/kwhFourthWeek"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/squadaone_regular"
                    android:text="-----/kWh"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:gravity="center_vertical" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconSize="33dp"
        app:itemIconTint="@color/bottom_nav_colors"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>
