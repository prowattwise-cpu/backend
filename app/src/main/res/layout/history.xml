<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top Bar with Logo, Back Button, History Text, and Profile -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/baseline_arrow_back_24"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/wattwiselogo"
            app:srcCompat="@drawable/w_wise_logo" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/squadaone_regular"
            android:text="@string/history"
            android:textColor="@color/primary_text"
            android:textSize="45sp" />
    </RelativeLayout>

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Monthly Calendar -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monthly Calendar"
                android:fontFamily="@font/squadaone_regular"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="10dp"
                android:gravity="center" />

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="20dp"
                android:dateTextAppearance="@style/CalendarDateTextAppearance"
                android:weekDayTextAppearance="@style/CalendarWeekDayTextAppearance"
                android:selectedWeekBackgroundColor="#EAF0FF"
                android:focusedMonthDateColor="#1E2940"
                android:unfocusedMonthDateColor="#5D6B82"
                android:weekSeparatorLineColor="#C4D4FF"
                android:selectedDateVerticalBar="@drawable/calendar_selected_date" />

            <!-- Whole Month Usage -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_button_light_blue"
                android:padding="16dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Whole Month Usage"
                    android:fontFamily="@font/squadaone_regular"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvWholeMonthUsage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-----/kWh"
                    android:fontFamily="@font/squadaone_regular"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:paddingTop="5dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Whole Year Usage -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_button_light_blue"
                android:padding="16dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Whole Year Usage"
                    android:fontFamily="@font/squadaone_regular"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvWholeYearUsage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-----/kWh"
                    android:fontFamily="@font/squadaone_regular"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:paddingTop="5dp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAVIGATION -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconSize="33dp"
        app:itemIconTint="@color/bottom_nav_colors"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>
