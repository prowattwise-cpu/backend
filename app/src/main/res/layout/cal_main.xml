<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- Top Bar with Logo -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/wattwiselogo"
            app:srcCompat="@drawable/w_wise_logo" />
    </RelativeLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_button_light_blue"
        android:fontFamily="@font/squadaone_regular"
        android:gravity="center"
        android:minHeight="90dp"
        android:padding="20dp"
        android:text="Appliances Energy Usage"
        android:textColor="@color/dark_blue"
        android:textSize="28sp" />

    <!-- Days and Price Input Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewDays"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/rounded_button_light_blue"
            android:fontFamily="@font/squadaone_regular"
            android:gravity="center"
            android:minWidth="70dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Days :"
            android:textColor="@color/dark_blue"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/etDays"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:hint="Days"
            android:inputType="number"
            android:maxWidth="120dp"
            android:minWidth="80dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/rounded_button_light_blue"
            android:fontFamily="@font/squadaone_regular"
            android:gravity="center"
            android:minWidth="70dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Price :"
            android:textColor="@color/dark_blue"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/etGlobalPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:hint="₱/kWh"
            android:inputType="numberDecimal"
            android:maxWidth="150dp"
            android:minWidth="100dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />
    </LinearLayout>

    <!-- Scrollable Table -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollTable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_light_blue"
                android:orientation="vertical"
                android:padding="10dp">

                <!-- Appliance Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="Appliance"
                    android:textColor="@color/dark_blue"
                    android:textStyle="bold" />

                <!-- Watts, Hours, Quantity, Delete Header Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Watts (W)"
                        android:textColor="@color/dark_blue"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hours"
                        android:textColor="@color/dark_blue"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Quantity"
                        android:textColor="@color/dark_blue"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Delete"
                        android:textColor="@color/dark_blue"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Result -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Total: ₱0.00"
        android:textColor="@color/dark_blue"
        android:fontFamily="@font/squadaone_regular"
        android:textSize="18sp" />

    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/linearButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAddRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_light_blue"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:fontFamily="@font/squadaone_regular"
            android:text="ADD ROW"
            android:textColor="@color/dark_blue" />

        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_light_blue"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:fontFamily="@font/squadaone_regular"
            android:text="CALCULATE"
            android:textColor="@color/dark_blue" />
    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconSize="33dp"
        app:itemIconTint="@color/bottom_nav_colors"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>
